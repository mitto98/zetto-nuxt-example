<databaseChangeLog xmlns='http://www.liquibase.org/xml/ns/dbchangelog'
                   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
                   xsi:schemaLocation='http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd'>

  <changeSet author="Giampiero Granatella" id="GG-005">
    <createTable tableName="istituti">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="cod_direz_terr" type="varchar(50)"/>
      <column name="desc_direz_terr" type="varchar(255)"/>
      <column name="cod_scuola" type="varchar(50)"/>
      <column name="desc_scuola" type="varchar(255)"/>
      <column name="cod_municipio" type="varchar(50)"/>
      <column name="desc_municipio" type="varchar(255)"/>
      <column name="indirizzo" type="varchar(500)"/>
      <column name="tipo" type="varchar(100)"/>
      <column name="disable_date" type="date"/>
    </createTable>
  </changeSet>

</databaseChangeLog>
